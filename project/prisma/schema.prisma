generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

enum Role {
  ADMIN
  SUPERADMIN
}

model Admin {
  id String @id @default(uuid())
  email String @unique
  nama String
  password String
  role Role @default(ADMIN)
  passwordResetTokens PasswordResetToken[]
}

model PasswordResetToken {
  id String @id @default(uuid())
  token String
  email String
  expiresAt DateTime
  admin Admin @relation(fields: [email], references: [email], onDelete: Cascade)
  @@unique([email, token])
}