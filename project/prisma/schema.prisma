generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

enum Role {
  ADMIN
  SUPERADMIN
}

enum TipePabrik {
  PRODUSEN
  DISTRIBUTOR
  KONSUMEN
}

enum Kualitas {
  GOOD
  MODERATE
  POOR
}

model Admin {
  id String @id @default(uuid())
  email String @unique
  nama String
  password String
  role Role @default(ADMIN)
  tipePabrik TipePabrik @default(DISTRIBUTOR)
  rantaiId String?
  rantai Rantai? @relation(fields: [rantaiId], references: [id])
  lokasi String
  kontak String
  laporan Laporan[]
  passwordResetTokens PasswordResetToken[]
}

model Laporan {
  id String @id @default(uuid())
  createdAt DateTime @default(now())

  skor Int
  deskripsiAI String
  status Kualitas

  pabrik Admin @relation(fields: [pabrikId], references: [id], onDelete: Cascade)
  pabrikId String
}

model Rantai {
  id String @id @default(uuid())
  nama String?
  members Admin[]
}

model PasswordResetToken {
  id String @id @default(uuid())
  token String
  email String
  expiresAt DateTime
  admin Admin @relation(fields: [email], references: [email], onDelete: Cascade)
  @@unique([email, token])
}